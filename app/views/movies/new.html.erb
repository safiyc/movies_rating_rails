<%= render "shared/navbar" %>

<section class="new-movie">
  <header>
    <h1>
      Enter A New Movie Entry
    </h1>
  </header>

  <div class="row">
    <div class="col-sm-6">
      <%=  form_for @movie do |f| %>
        <%= render "shared/errors", object: @movie %>

        <div class="form-group">
          <%= f.text_field :title, required: true, class: "form-control", placeholder: "title"  %>
        </div>

        <div class="form-group">
          <%= f.text_field :description, required: true, class: "form-control", placeholder: "description" %>
        </div>

        <div class="form-group">
          <%= f.text_field :genre, required: true, class: "form-control", placeholder: "genre" %>
        </div>

        <div class="form-group">
          <%= f.text_field :release_date, required: true, class: "form-control", placeholder: "release year" %>
        </div>

        <div class="form-group">
          <%= f.button :submit, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
